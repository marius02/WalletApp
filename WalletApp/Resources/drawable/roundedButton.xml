<?xml version="1.0" encoding="utf-8" ?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">

    <layer-list>
      <item>
        <shape>
          <gradient android:angle="270" android:startColor="@color/white" android:endColor="@color/white"></gradient>
          <stroke android:width="1dp" android:color="@color/gray"></stroke>
          <corners android:radius="5dp"></corners>
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">

    <layer-list>
      <item>
        <shape>
          <gradient android:angle="270" android:startColor="@color/gray" android:endColor="@color/gray"></gradient>
          <stroke android:width="1dp" android:color="@color/gray"></stroke>
          <corners android:radius="5dp"></corners>
        </shape>
      </item>
    </layer-list>
  </item>

</selector>