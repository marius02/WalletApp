<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <!-- Section One -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/roundededges"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/profile1"
                android:id="@+id/profileImage"
                android:layout_centerVertical="true"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/nameTextView"
                android:text="Anna Smith"
                android:layout_toRightOf="@+id/profileImage"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/placeTextView"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_below="@+id/nameTextView"
                android:text="Bucharest, Romania"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/phonecall"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/profileImage"
                android:layout_below="@id/placeTextView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <!-- Section Two-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.22"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/balanceTextView"
            android:text="$32,200.023"
            android:textStyle="bold"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_above="@id/balanceTextView"
            android:text="Account Balance"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- Section Third -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:src="@drawable/profile1"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:text="Transfer to Anna"
                android:layout_toRightOf="@id/friendImageView"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:text="22-May-2020"
                android:layout_below="@id/descriptionTextView"
                android:layout_toRightOf="@id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:text="$5700.00"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@id/amountTextView"
                android:text="View"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:src="@drawable/profile1"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:text="Transfer to John"
                android:layout_toRightOf="@id/friendImageView"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:text="22-June-2020"
                android:layout_below="@id/descriptionTextView"
                android:layout_toRightOf="@id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:text="$5700.00"
                android:textColor="@color/green"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@id/amountTextView"
                android:text="View"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:src="@drawable/profile1"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:text="Transfer to Smith"
                android:layout_toRightOf="@id/friendImageView"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:text="20-May-2020"
                android:layout_below="@id/descriptionTextView"
                android:layout_toRightOf="@id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:text="$5700.00"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@id/amountTextView"
                android:text="View"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:background="@drawable/roundedbutton"
                    android:textAllCaps="false"
                    android:text="View History"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="45dp"/>

                <Button
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/roundedbutton"
                    android:textAllCaps="false"
                    android:text="New transaction"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>